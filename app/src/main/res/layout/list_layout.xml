<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        app:cardCornerRadius="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:textSize="15dp"
                android:visibility="invisible"
                android:id="@+id/tv_passenger_id_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOKING_ID"/>

            <TextView
                android:visibility="invisible"
                android:textSize="20dp"
                android:id="@+id/tv_passenger_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PASSENGER_ID" />


            <TextView
                android:id="@+id/textview_latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LATITUDE"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/textview_longtitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LONGTITUDE"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/button_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/cancel" />


            <ImageView
                android:id="@+id/button_locate"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/location_location"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:textSize="15dp"
                        android:id="@+id/tv_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOTE NOTE NOTE" />

                    <TextView
                        android:textSize="25dp"
                        android:id="@+id/tv_passenger_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOTE NOTE NOTE" />




<!--                    <Button-->
<!--                        android:id="@+id/button_cancel"-->
<!--                        android:layout_width="98dp"-->
<!--                        android:layout_height="40dp"-->
<!--                        android:backgroundTint="#FF0000"-->
<!--                        android:drawableTint="#E32A2A"-->
<!--                        android:text="Cancel" />-->




                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button_book"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="#4CAF50"
                        android:text="Book" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>